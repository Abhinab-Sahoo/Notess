<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/noteFragment">

    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.notess.ui.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" >
        <action
            android:id="@+id/action_noteFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_noteFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment" />

    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.example.notess.ui.AddNoteFragment"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_add_note" >
        <action
            android:id="@+id/action_addNoteFragment_to_noteFragment"
            app:destination="@id/noteFragment"
            app:popUpTo="@id/noteFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/editNoteFragment"
        android:name="com.example.notess.ui.EditNoteFragment"
        android:label="fragment_detail_note"
        tools:layout="@layout/fragment_edit_note" >

        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_editNoteFragment_to_noteFragment"
            app:destination="@id/noteFragment"
            app:popUpTo="@id/noteFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_editNoteFragment_to_archiveFragment"
            app:destination="@id/archiveFragment"
            app:popUpTo="@id/archiveFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/archiveFragment"
        android:name="com.example.notess.ui.ArchiveFragment"
        android:label="fragment_archive"
        tools:layout="@layout/fragment_archive" >

        <action
            android:id="@+id/action_archiveFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_archiveFragment_to_noteFragment"
            app:destination="@id/noteFragment"
            app:popUpTo="@id/noteFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/deletedFragment"
        android:name="com.example.notess.ui.DeletedFragment"
        android:label="fragment_deleted"
        tools:layout="@layout/fragment_deleted" />
</navigation>